<form class="{{cssClass}}" autocomplete="off">

    <div class="form-group">
        <label>{{localize config.statConfigLabels.image}}</label>
        <div class="form-fields picker">
            {{ filePicker type="image" target="img" }}
            <input class="image" type="text" name="img" value="{{ stat.img }}">
        </div>
    </div>

    <div class="form-group">
        <label>{{localize config.statConfigLabels.display}}</label>
        <div class="form-fields">
            <select name="settings.display">
                {{#select stat.settings.display}}
                    {{#each stat.validDisplays as |name key|}}
                        <option value="{{key}}">{{localize name}}</option>
                    {{/each}}
                {{/select}}
            </select>
        </div>
    </div>

    <button type="submit">Save Changes</button>

</form>