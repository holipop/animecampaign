<form class="{{cssClass}}" autocomplete="off">
    <div class="background"></div>
    <input class="background-input" type="color" name="system.backgroundColor" data-edit="system.backgroundColor" value="{{system.backgroundColor}}">

    <header class="sheet-header">
        <img class="img" src="{{item.img}}" data-edit="img" title="{{item.name}}">

        <section class="header-top">
            <div class="name" data-edit="name" spellcheck='false' contenteditable>
                {{item.name}}
            </div>
            <div>
                {{localize config.test}}
            </div>
        </section>
    </header>
</form>