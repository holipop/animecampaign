<section class="biography tab" data-tab="biography" data-group="actor-tabs">

    <div class="control">
        <label>Text Editor</label>

        <select name="system.biography.editor">
            {{#select system.biography.editor}}
                <option value="markdown">Markdown</option>
                <option value="prosemirror">ProseMirror</option>
            {{/select}}
        </select>
    </div>

    {{#if (eq system.biography.editor "markdown")}}
        <textarea data-resize name="system.biography.plaintext">{{~system.biography.plaintext}}</textarea>
    {{/if}}

    {{#if (eq system.biography.editor "prosemirror")}}
        {{editor system.biography.richtext target="system.biography.richtext" button=true engine="prosemirror" collaborate=true}}
    {{/if}}

</section>