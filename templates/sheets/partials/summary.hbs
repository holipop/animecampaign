<header class="summary">

    <!-- Background -->
    <div class="background" data-match="background-color"></div>

    <section class="profile">

        <div class="buttons">

            {{#if owner}}
                <!-- Color -->
                <input class="color" type="color" name="system.color" data-edit="system.color" data-tooltip="AC.TOOLTIP.Color" value="{{system.color}}">
                <a class="color-button" data-contrast="color border-color">
                    <i class="fas fa-palette"></i>
                </a>
            {{/if}}

            {{#if (eq documentName "Item")}}
                {{#unless limited}}
                    <!-- Roll -->
                    <a class="roll" data-tooltip="AC.TOOLTIP.Roll" data-contrast="color border-color">
                        <i class="fas fa-dice-d20" data-roll></i>
                    </a>
                {{/unless}} 
            {{/if}}

        </div>

        <!-- Image -->
        <img class="img" src="{{document.img}}" data-edit="img" data-match="background-color">
    </section>

    <section class="summary-top">
        <!-- Name -->
        <textarea class="name" name="name" data-name data-enter data-contrast>{{document.name}}</textarea>
        <div class="name facade" data-facade data-name data-contrast>{{document.name}}</div>

        {{#if (eq documentName "Actor")}}
            <!-- Class -->
            <textarea class="class" name="system.class" placeholder="{{localize "AC.LABEL.Class"}}" data-resize data-enter data-contrast>{{~system.class}}</textarea>
        {{/if}}

        {{#if (eq documentName "Item")}}
            <!-- Proficiency Value -->

            <!-- Action -->
            <!-- img class="action" src="{{system.details.action.img}}" data-contrast-image="{{system.color}}" alt="systems/animecampaign/assets/transparent.svg" -->

        {{/if}}
    </section>

    <section class="summary-bottom">
        
        {{#if (eq documentName "Actor")}}
            <!-- Type of mundie or epithet user -->
            <select class="type" name="system.type">

                <optgroup label="{{localize "AC.TYPE.Inscribed"}}">
                    <option value="epithet">{{localize "AC.TYPE.Epithet"}}</option>
                </optgroup>
                
                <optgroup label="{{localize "AC.TYPE.Mundie"}}">
                    <option value="expert">{{localize "AC.TYPE.Expert"}}</option>
                    <option value="powerhouse">{{localize "AC.TYPE.Powerhouse"}}</option>
                </optgroup>

            </select>

            <!-- Core Word or Epithet -->
            <input class="word" type="text" name="system.word" value="{{system.word}}" placeholder="{{localize "AC.LABEL.Word"}}">
        {{/if}}

        {{#if (eq documentName "Item")}}
            <!-- Category -->
            <select class="category-select" data-select-category="select">
                {{#select system.category}}
                    {{#each categories as |category index|}}
                        <option value="{{category}}">{{category}}</option>
                    {{/each}}
                {{/select}}
            </select>

            <input class="category-input" type="text" name="system.category" value="{{system.category}}" placeholder="{{localize "AC.LABEL.Category"}}" data-select-category="target">
        {{/if}}

    </section -->
    
</header>
