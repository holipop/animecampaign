<div class="background"></div>
<input class="background-input" type="color" name="system.color" data-edit="system.color" value="{{system.color}}">

<header class="sheet-header">
    <img class="img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}">

    <section class="header-top">
        <div class="name" data-edit="name" spellcheck='false' contenteditable>
            {{actor.name}}
        </div>
        <div class="class" data-edit="system.class" spellcheck='false' contenteditable>
            {{system.class}}
        </div>
    </section>

    <section class="header-bottom">
        <select class="type" name="system.type">
            <optgroup label="{{localize config.powerset.inscribed}}">
                {{#select system.type}}
                    {{#each config.type.inscribed as |name key|}}
                        <option value="{{key}}">{{localize name}}</option>
                    {{/each}}
                {{/select}}
            </optgroup>
            <optgroup label="{{localize config.powerset.mundie}}">
                {{#select system.type}}
                    {{#each config.type.mundie as |name key|}}
                        <option value="{{key}}">{{localize name}}</option>
                    {{/each}}
                {{/select}}
            </optgroup>
        </select>
        <input class="word" name="system.word" type="text" value="{{system.word}}" placeholder="Epithet/Core Word">
        {{#if system.isInscribed}}
            <div class="proficiency-class">{{system.profClass}}</div>
        {{/if}}
    </section>
    
    <div class="header-graphic"></div>
</header>