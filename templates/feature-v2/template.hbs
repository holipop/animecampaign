<div class="Template Template--Feature">

    {{> "feature.summary"}}

    <div class="Scrollable">

        {{> "feature.stats"}}
            
        {{> "generic.nav"}}
        
        <section class="Description tab {{tabs.description.css}}" data-tab="description" data-group="feature">
            {{#if (gte permission 3)}}
                <prose-mirror class="ACTextEditor" name="system.description" value="{{system.description}}" toggled="true" compact="true">
                    {{{enrichedDescription}}}
                </prose-mirror>
            {{else}}
                <div class="NonOwnerDescription JS-AttachSections">
                    {{{enrichedDescription}}}
                </div>
            {{/if}}
        </section>

        {{#if (gte permission 2)}}
            <div class="Details Config tab {{tabs.details.css}}" data-tab="details" data-group="feature">
                {{> "generic.details" details=system.details prefix="system."}}
            </div>
        {{/if}}

    </div>

</div>