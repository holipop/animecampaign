<div>

    <!-- div class="dialog__bg">
        <svg>
        </svg>
    </div -->

    {{log this}}

    <div class="dialog__content config">

        <div class="config__group">
            <label class="config__label">Tag</label>
            <input class="config__input config__input--caps" type="text" name="tag" value="{{stat.tag}}" placeholder="{{localize "AC.DIALOG.AddStat.Placeholder"}}" autofocus>
        </div>

        <div class="config__group">
            <label class="config__label">Display</label>
            <select class="config__input" name="view">
                {{selectOptions config.displays selected=stat.view localize=true}}
            </select>
            <p class="config__notes">
                <b>Value</b> and <b>Resource</b> are numeric, <b>Label</b> can be any text.
            </p>
        </div>

        <div class="config__group">
            <label class="config__label">Size</label>
            <select class="config__input" name="size">
                {{selectOptions config.statSizes selected=stat.size localize=true}}
            </select>
        </div>

        <!-- TODO: LOCALIZE THESE -->

        {{#if (eq document.documentName "Actor")}}
            <hr class="config__hr">

            <div class="config__group">
                <label class="config__label">Color</label>
                <select class="config__input" name="color">
                    {{selectOptions colors selected=stat.color localize=true}}
                </select>
                <p class="config__notes">
                    Configure the stat for token attribute bars.
                </p>
            </div>
        {{/if}}

    </div>

    <div class="dialog__button-list">

        <!-- Update Stat -->
        <button type="submit" class="button dialog__button dialog-button">
            <span class="material-symbols-outlined">
                save
            </span>
            <span class="button__text">
                {{#if isNew}}
                    Add Stat
                {{else}}
                    Update Stat
                {{/if}}
            </span>
        </button>
        
