<section class="stat-list__header">

    <div class="stat-list__label" data-color="{{palette.primary}}">
        <span data-color="{{palette.secondary}}">{{localize "AC.LABEL.Stats"}}</span>
    </div>

    <button type="button" class="button stat-list__add-button" data-stat-add data-color="{{palette.primary}}" data-tooltip="{{localize "AC.TOOLTIP.Stat.Add"}}">
        <span class="material-symbols-outlined">add</span>
    </button>

</section>

<ul class="stat-list">

    <span class="stat-list__empty">&mdash; {{localize "AC.LABEL.EmptyStats"}} &mdash;</span>

    {{#each stats as |stat index|}}

        <li class="stat-card" data-stat="{{index}}" data-color="{{@root.palette.secondary}}" data-color-props="border-color">
            
            <div class="stat-card__header">
                <!-- img class="stat-card__img" src="./systems/animecampaign/assets/Material Symbols/Drag.svg" -->
                <span class="stat-card__tag">{{stat.tag}}</span>

                <div class="stat-card__controls">
                    <a class="stat-card__edit" data-stat-edit>
                        <span class="material-symbols-outlined">
                            edit
                        </span>
                    </a>
                    <a class="stat-card__delete" data-stat-delete>
                        <span class="material-symbols-outlined">
                            close
                        </span>
                    </a>
                </div>
            </div>

            <div class="stat-card__footer">
                <div class="stat-card__extra-info">

                    {{#if (eq @root.document.documentName "Actor")}}
                        <span class="stat-card__extra-field-label stat-card__color stat-card__color--{{stat.color}}">{{stat.color}}</span>
                    {{/if}}

                </div>
                <div class="stat-card__input-list">

                    <input type="number" class="stat-card__input stat-card__input--value input--shadow-out" placeholder="0">

                    <!-- input type="number" class="stat-card__input stat-card__input--numerator input--shadow-out" placeholder="0">
                    <input type="number" class="stat-card__input stat-card__input--denominator input--shadow-out" placeholder="0">
                    <input type="text" class="stat-card__input stat-card__input--label input--shadow-out" placeholder="0" -->

                </div>
            </div>

        </li>

    {{/each}}

</ul>