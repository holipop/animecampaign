<ul class="kit tab" data-kit data-tab="kit" data-group="character">

    {{#each system.categories as |category index|}}

        <li class="category">

            {{log this}}

            <section class="category__header" data-color="{{category.palette.primary}}" data-color-props="background-color">

                <a class="category__button" data-color="{{category.palette.constrast}}">
                    <span class="material-symbols-outlined">expand_more</span>
                </a>
                <span class="category__name" data-color="{{category.palette.constrast}}">
                    {{{category.nameHTML}}}
                </span>
                <a class="category__button" data-color="{{category.palette.constrast}}">
                    <span class="material-symbols-outlined">edit</span>
                </a>

                <div class="category__padding"></div>

                {{#each category.trackers as |tracker index|}}

                    <div class="tracker" data-color="{{category.palette.constrast}}">
                        {{tracker.tag}}
                    </div>

                {{/each}}

                <a class="category__button" data-color="{{category.palette.constrast}}">
                    <span class="material-symbols-outlined">add_circle</span>
                </a>
                <a class="category__button" data-color="{{category.palette.constrast}}">
                    <span class="material-symbols-outlined">delete_forever</span>
                </a>

            </section>

        </li>

    {{/each}}

</ul>