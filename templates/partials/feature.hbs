<li class="feature" data-feature="{{_id}}">

    <!-- Entry -->
    <section class="entry" data-match-feature>

        <!-- Image -->
        <img class="img" src="{{img}}" title="Roll Feature" data-match-feature="background-color border-left-color">

        <!-- Name -->
        <h4 class="name">{{name}}</h4>

        <!-- Tracked Stats -->
        <div class="feature-tracked-stat-list">
            {{#each system.trackedStats as |stat index|}}

                <div class="stat">
                    <div class="stat-img">
                        <img src="{{stat.img}}">
                    </div>
                    
                    <div class="stat-numbers">

                        {{#if (eq stat.view 'value')}}
                            <span class="value">{{stat.value}}</span>
                        {{/if}}

                        {{#if (eq stat.view 'resource')}}
                            <span class="resource-value">{{stat.value}}</span>
                            <span class="resource-max">/&thinsp;{{stat.max}}</span>
                        {{/if}}

                        {{#if (eq stat.view 'label')}}
                            <span data-swap-font>{{stat.label}}</span>
                        {{/if}}
                        
                    </div>
                </div>

            {{/each}}
        </div>

        <!-- Controls -->
        <div class="feature-controls">

            <a class="control" title="View Feature">
                <i class="fas fa-feather-pointed" data-view-feature="{{_id}}"></i>
            </a>
            <a class="control" title="Delete Feature">
                <i class="fas fa-trash" data-delete-feature="{{_id}}"></i>
            </a>

        </div>

    </section>

    <!-- Expanded View -->
    <section class="expanded" hidden>

    </section>

</li>