<div class="animecampaign kit-piece-roll" {{match system style='border-color'}}>

    <section class="summary">
        <header {{match system style='background-color'}}>
            <img class="img" {{match system style='background-color'}} src="{{img}}" data-edit="img">
            <div class="name" {{contrast system}}>
                {{name}}
            </div>
        </header>

        <span class="type">
            {{#if (eq system.type 'custom')}}
                {{system.customType}}
            {{else}}
                {{system.type}}
            {{/if}}
        </span>
    </section>

    <section class="roll">
        <div class="total" {{match roll}}>
            {{ roll.totalInt }}
        </div>
        <div class="result">
            &lpar; {{ roll.result }} &rpar;
        </div>
    </section>

    <section class="sections">
        {{#each system.sections as |section index|}}
            <fieldset class="section">

                <legend class="section-label">
                    <a class="collapse">
                        <i class="fas fa-chevron-down"></i>
                    </a>
                    {{#if section.label}}
                        {{section.label}}
                    {{/if}}
                </legend>

                <div class="section-text">
                    {{{section.text}}}
                </div>

            </fieldset>
        {{/each}}
    </section>

    {{log this}}
</div>