<section class="Summary">

    <div class="Summary__ImageWrapper">
        
        <img class="Summary__Image JS-Color" src="{{document.img}}" data-color="{{palette.primary}}" data-properties="border-color">
        <div class="Summary__ImageEdit" data-action="onEditImage">
            <span class="Summary__ImageEditIcon MSO">edit</span>
        </div>

    </div>
    
    <div class="Summary__Info">

        <textarea class="Summary__Name JS-Resize JS-Enter" name="name" spellcheck="false" placeholder="{{localize "AC.LABEL.Name"}}">{{document.name}}</textarea>
        <input class="Summary__Class" type="text" name="system.class" placeholder="{{localize "AC.LABEL.Class"}}" value="{{system.class}}">

        <div class="Summary__InfoFooter JS-Color" data-color="{{palette.primary}}" data-properties="background-color">

            <select class="Summary__Type JS-Color" name="system.type" data-color="{{palette.contrast}}">
                <optgroup label="{{localize "AC.TYPE.Inscribed"}}">
                    {{selectOptions config.inscribed localize=true selected=system.type}}
                </optgroup>
                <optgroup label="{{localize "AC.TYPE.Mundie"}}">
                    {{selectOptions config.mundie localize=true selected=system.type}}
                </optgroup>
            </select>

            <input class="Summary__Word JS-Color" type="text" name="system.word" value="{{system.word}}" data-color="{{palette.primary}}" data-properties="border-color">

        </div>
    </div>

    <div class="Summary__Buttons">

        <button class="ACButton ACButton--Rounded JS-Color" type="button" data-action="onInvokeColorPicker" data-color="{{palette.secondary}}" data-properties="border-color color">
            <span class="ACButton__Icon MSO">palette</span>
        </button>
        <input class="Summary__HiddenColor JS-InvokeColorPicker" type="color" name="system.color" value="{{system.color}}">

    </div>

</section>